{% set grid_size = theme_var('grid-size') %}

<section class="section modular-projects {{ page.header.class}} bg-gray">
    <section class="container {{ grid_size }}">
        {{ content|raw }}
        
        <div class="columns col-gapless padding-m-top justify-center">
            {% for project in page.header.projects %}
                <a href="{{ project.link }}" target="_blank">
                    <div class="column col-4 center-headings tile" 
                        style="background-image: url({{ page.media[project.image].url }})">

                        <div class="tile__overlay">
                            <div class="tile__txt">
                                <h4>{{ project.title }}</h4>
                                <div>{{ project.description }}</div>
                            </div>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </section>
</section>